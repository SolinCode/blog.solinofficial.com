                <use class="menu__icon-menu" href="/images/icons/menu.svg#menu"></use>
                <use class="menu__icon-cross" href="/images/icons/menu.svg#cross"></use>
            </svg>
        </button>
        <ul class="menu__list" id="menu__list">
            <li class="menu__item">
                <a class="menu__link" href="/" aria-label="Главная">Главная</a>
            </li>
            <li class="menu__item">
                <a class="menu__link" href="https://www.solinofficial.com/" aria-label="Обо мне">Обо мне</a>
            </li>
            <li class="menu__item">
                <a class="menu__link" href="https://www.donationalerts.com/c/solin4035" aria-label="Поддержать">Поддержать</a>
            </li>
        </ul>
    </nav>
    <script src="/scripts/modules/menu.js"></script>
