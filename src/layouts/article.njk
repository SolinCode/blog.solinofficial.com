---
layout: page.njk
---

<main class="main">
    <section class="main__section">
        <div class="article__heading">
            <time class="article__heading--date" datetime=" {{ date.toISOString()}} ">{{ date.toLocaleString('ru-RU', { year: 'numeric', month: '2-digit', day: '2-digit'}) }}</time>
            <h1 class="article__heading--title">{{ title }}</h1>
            <p class="article__heading--tag">{{ tags }}</p>
            <a class="article__heading--edit" href="https://github.com/SolinCode/blog.solinofficial.com/blob/main/src{{ page.url }}index.md">Редактировать статью</a>
        </div>
        <div class="article__content">
            {{ content | safe }}
        </div>
        <p class="notice">
            <a class="notice__link" href="/">На главную</a>
        </p>
    </section>
</main>
